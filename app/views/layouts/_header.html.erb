<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag 'no_image.jpg', class: "img-fluid" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if brewery_signed_in? %>
          <p id="notice" class='m-auto text-dark text-center'><%= notice %></p>
          <li>
            <%= link_to brewery_my_page_path(current_brewery), class: 'nav-link text-dark' do %>
              <i class="fas fa-user"></i> マイページ(商品一覧)
            <% end %>
          </li>
          <li>
            <%= link_to brewery_shop_followed_path(current_brewery), class: 'nav-link text-dark' do %>
              <i class="fas fa-people-arrows"></i> フォロー・取扱店一覧
            <% end %>
          </li>
          <li>
            <%= link_to brewery_sakes_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-bottle"></i> 自社商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_brewery_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% elsif shop_signed_in? %>
          <p id="notice" class='m-auto text-dark text-center'><%= notice %></p>
          <li>
            <%= link_to shop_my_page_path(current_shop), class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-glass"></i> マイページ(取扱一覧)
            <% end %>
          </li>
          <li>
            <%= link_to shop_breweries_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-industry"></i> 酒造一覧
            <% end %>
          </li>
          <li>
            <%= link_to shop_sakes_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-bottle"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_shop_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
          <p id="notice" class='m-auto text-danger text-center'>
            (管理者)<br><%= notice %>
          </p>
          <li>
            <%= link_to admin_root_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-home"></i> 管理者トップページ
            <% end %>
          </li>
          <li>
            <%= link_to admin_tags_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-file"></i> タグ一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_breweries_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-bottle"></i> 酒造一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_shops_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-glass"></i> 販売店・飲食店一覧
            <% end %>
          </li>
        <% else %>
          <p id="notice" class='m-auto text-dark text-center'><%= notice %></p>
          <li>
            <%= link_to new_brewery_session_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-bottle"></i> 酒造ログイン
            <% end %>
          </li>
          <li>
            <%= link_to new_shop_session_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-wine-glass"></i> 販売店・飲食店ログイン
            <% end %>
          </li>
          <li>
            <%= link_to shop_guest_sign_in_path, method: :post, class: 'nav-link text-dark' do %>
              <i class="fas fa-user"></i> ゲストログイン
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-book-open"></i> システム概要
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>