<h2>酒造一覧</h2>
<div class="search_form col-3">
  <%= form_with url: shop_breweries_path, local: true, method: :get do |f| %>
    <%= f.text_field :search, class: "form-control", placeholder: "酒造検索" %>
    <%= f.submit "検索", class: "btn btn-light" %>
  <% end %>
</div>
 <table>
    <thead>
      <tr>
        <th></th>
        <th>商品名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to shop_brewery_path(user) do %>
              <%= image_tag user.get_image, size: "100x100" %>
            <% end %>
          </td>
          <td>
            <%= link_to shop_brewery_path(user) do %>
              <%= user.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
 </table>