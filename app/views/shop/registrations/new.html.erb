<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h3 class="mt-2 text-center">新規店舗登録</h3>

      <div class="mx-auto col-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shop/shared/error_messages", resource: resource %>

          <div class="field mt-2">
            <%= f.label "店名", class: "form-label" %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="field mt-2">
            <%= f.label "郵便番号", class: "form-label" %><br />
            <%= f.text_field :post, class: "form-control" %>
          </div>

          <div class="field mt-2">
            <%= f.label "住所", class: "form-label" %><br />
            <%= f.text_field :address, class: "form-control" %>
          </div>

          <div class="field mt-2">
            <%= f.label "電話番号", class: "form-label" %><br />
            <%= f.text_field :tel, class: "form-control" %>
          </div>

          <div class="field mt-2">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mt-2">
            <%= f.label "パスワード", class: "form-label" %>
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field mt-2">
            <%= f.label "パスワード(再入力)", class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions mt-2">
            <%= f.submit "新規登録", class: "btn btn-outline-success btn-sm btn-block" %>
          </div>
        <% end %>
        <%= render "shop/shared/links" %>
      </div>
    </div>
  </div>
</div>