<h2>店舗詳細</h2>
  <table class="table">
    <thead>
      <tr>店舗の情報<tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"></th>
        <td><%= image_tag @user.get_image, size: "100x100" %></td>
      </tr>
      <tr>
        <th scope="row">店舗名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th scope="row">住所</th>
        <td>〒<%= @user.post %> <%= @user.address %></td>
      </tr>
      <tr>
        <th scope="row">電話番号</th>
        <td><%= @user.tel %></td>
      </tr>
      <tr>
        <th scope="row">Email</th>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "会員情報の編集", edit_admin_shop_path(@user), class: "btn btn-outline-secondary btn-sm" %>
