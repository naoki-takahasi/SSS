<div class="container">
  <div class="row">
    <div class='mx-auto col-sm-5'>
      <h3 class="text-center">会員情報編集</h3>
      <%= render '/layouts/errors', obj: @user %>
        <%= form_with model: @user, url: admin_shop_path do |f| %>
          <%= f.label "店舗名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          <%= f.label "プロフィール写真", class: "form-label mt-2" %>
            <%= f.file_field :image, accept: "image/*" %><br>
          <%= f.label "郵便番号", class: "form-label mt-2" %>
            <%= f.text_field :post, class: "form-control" %>
          <%= f.label "住所", class: "form-label mt-2" %>
            <%= f.text_area :address, class: "form-control" %>
          <%= f.label "電話番号", class: "form-label mt-2" %>
            <%= f.text_field :tel, class: "form-control" %>
          <%= f.label "会員有効・無効", class: "form-label mt-2" %><br>
              <%= f.radio_button :is_enable, true %>
                <%= f.label :is_enabled, "有効" %>
              <%= f.radio_button :is_enable, false %>
                <%= f.label :is_enabled, "無効" %>
          <%= f.submit "更新", class: "btn btn-outline-success btn-sm btn-block mt-2" %>
        <% end %>
      <%= link_to "削除", admin_shop_path(@user.id), method: :delete, data: {confirm: "店舗を削除しますか？"}, class: "btn btn-danger btn-sm btn-block mt-2" %>
    </div>
  </div>
</div>