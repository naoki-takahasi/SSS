<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="mx-auto col-5">
        <h3 class="text-center">会員情報編集</h3>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h3><%= pluralize(@user.errors.count, "error") %>　件のエラーが発生しました。</h3>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
            <%= form_with model: @user, url: shop_my_page_update_path do |f| %>
                <%= f.label "店舗名", class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
                <%= f.label "プロフィール写真", class: "form-label mt-2" %>
                <%= f.file_field :image, accept: "image/*", class: "form-control" %>
                <%= f.label "郵便番号", class: "form-label mt-2" %>
                <%= f.text_field :post, class: "form-control" %>
                <%= f.label "住所", class: "form-label mt-2" %>
                <%= f.text_area :address, class: "form-control" %>
                <%= f.label "電話番号", class: "form-label mt-2" %>
                <%= f.text_field :tel, class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-outline-success btn-sm btn-block mt-2" %>
            <% end %>
          <%= link_to "会員情報の削除", shop_close_path, class: "btn btn-danger btn-sm btn-block mt-2" %>
      </div>
      <%= link_to "削除", admin_shop_path(@user.id), method: :delete, data: {confirm: "店舗を削除しますか？"} %>
    </div>
  </div>
</div>