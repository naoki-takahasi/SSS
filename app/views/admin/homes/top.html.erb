<div class="container">
  <div class="row mt-3">
    <div class='col-8 d-none d-lg-block'>
      <%= image_tag 'AdobeStock_322076487_Preview.jpg', class: 'img-fluid' %>
    </div>
    <div class='col-md-7 d-lg-none d-md-block'>
      <%= image_tag 'AdobeStock_508556375_Preview.jpg', class: 'img-fluid' %>
    </div>
    <div class='mt-3 col-lg-4'>
      <%= image_tag 'SSS.png', class: 'img-fluid' %><br>
      <h3 class='mt-2'>管理者メニュー</h3>
      <div class='btn-wrapper col-11'>
        <div class="row my-2">
          <%= link_to admin_sakes_path, class: "btn btn-outline-dark btn-sm btn-block" do %>
            <i class="fas fa-stroopwafel"></i> 商品一覧
          <% end %>
        </div>
        <div class="row mb-2">
          <%= link_to admin_tags_path, class: "btn btn-outline-dark btn-sm btn-block" do %>
            <i class="fas fa-file"></i> タグ一覧
          <% end %>
        </div>
        <div class="row mb-2">
          <%= link_to admin_breweries_path, class: "btn btn-outline-dark btn-sm btn-block" do %>
            <i class="fas fa-wine-bottle"></i> 酒造一覧
          <% end %>
        </div>
        <div class="row mb-2">
          <%= link_to admin_shops_path, class: "btn btn-outline-dark btn-sm btn-block" do %>
            <i class="fas fa-wine-glass"></i> 販売店・飲食店一覧
          <% end %>
        </div>
        <div class="row">
          <%= link_to 'サインアウト',destroy_admin_session_path, method: :delete, class: "btn btn-danger btn-sm btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>