<div class="container">
  <div class="row">
    <div class="col-6 mx-auto ">
      <h3>タグ名称変更</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto mt-5">
        <%= form_with model: @tag, url: admin_tag_path, local: true do |f| %>
        <%= f.label :name, "タグ名", class: 'font-weight-bold' %>
          <%= f.text_field :name, class: "ml-5" %>
          <%= f.submit '変更を保存',class: "btn btn-success ml-5" %>
        <% end %>
    </div>
  </div>
</div>