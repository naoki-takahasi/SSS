<h2>商品一覧</h2>
<div class="search_form col-3">
  <%= form_with url: admin_sakes_path, local: true, method: :get do |f| %>
    <%= f.text_field :search, class: "form-control", placeholder: "商品検索" %>
    <%= f.select :search_tag_id, options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
    {prompt: '絞り込み'}, {onchange: 'submit(this.form);'} %>
    <%= f.submit "検索", class: "btn btn-light" %>
  <% end %>
</div>
<%= render 'index', sakes: @sakes %>