<div class="container">
  <div class="row mt-3">
    <div class='mx-auto col-sm-6'>
      <h2 class="text-center">販売店・飲食店一覧</h2>
      <div class='row'>
        <div class="mt-2 form-inline">
          <div class="form-group">
            <%= form_with url: brewery_shops_path, local: true, method: :get do |f| %>
              <%= f.text_field :search, class: "form-control", placeholder: "店舗検索" %>
              <%= f.submit "検索", class: "btn btn-light my-2" %>
            <% end %>
          </div>
        </div>
      </div>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>